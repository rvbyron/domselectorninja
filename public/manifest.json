{
  "manifest_version": 3,
  "name": "DOM Selector Ninja",
  "version": "1.0.0",
  "description": "Build and test CSS selectors for web elements",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/DomSelectorNinja-16.png",
      "48": "icons/DomSelectorNinja-48.png",
      "128": "icons/DomSelectorNinja-128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      // This content script runs on all webpages the user visits
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/DomSelectorNinja-16.png",
    "48": "icons/DomSelectorNinja-48.png",
    "128": "icons/DomSelectorNinja-128.png"
  }
}